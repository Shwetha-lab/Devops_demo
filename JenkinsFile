pipeline {
   agent  any
    stages {
       
        stage('Plan') {
            steps {
                bat "cd;cd terraform ; terraform init -input=false"
                bat "cd;cd terraform ; terraform workspace new ${environment}"
                bat "cd;cd terraform ; terraform workspace select ${environment}"
                bat "cd;cd terraform ; terraform plan -input=false -out tfplan "
                bat "cd;cd terraform ; terraform show -no-color tfplan > tfplan.txt"
            }
        }
        

        stage('Apply') {
            steps {
                bat "cd;cd terraform ; terraform apply -input=false tfplan"
            }
        }
    }

  }
